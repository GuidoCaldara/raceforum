<div class="card card-box-review mt-3 py-1 px-4">
  <div class="row">
    <div class="col-sm-2 mr-4">
      <div class="user-review-box">
        <% if review.user.facebook_picture_url %>
          <div class="review-avatar my-2" style="background-image: url('<%= review.user.facebook_picture_url %>')"></div>
        <% else %>
          <div class="review-avatar-no-fb my-2"></div>

        <% end %>
        <div class="">
          <p><%= review.user.username %></p>
          <p class="review-date"><%= review.user.reviews.count %>
            recensioni</p>
        </div>
      </div>
    </div>
    <div class="col-sm-9 mt-3 review-col">
      <div class="row">
        <div class="col-lg-3 col-sm-6">
          <div class=" star-display mb-0 ">
            <p class="mb-0 review-text">Organizzazione</p>
            <% review.organization_rating.times do %>
              <i class="fas fa-star"></i>
            <% end %>
          </div>

        </div>
        <div class="col-lg-3 col-sm-6">
          <div class=" star-display mb-0 ">
            <p class="mb-0 review-text">Percorso</p>
            <% review.path_rating.times do %>
              <i class="fas fa-star"></i>
            <% end %>
          </div>

        </div>
        <div class="col-lg-3 col-sm-6">
          <div class=" star-display mb-0 ">
            <p class="mb-0 review-text">Qualità prezzo</p>
            <% review.quality_price_rating.times do %>
              <i class="fas fa-star"></i>
            <% end %>
          </div>

        </div>
        <div class="col-lg-3 col-sm-6">
          <div class=" star-display mb-0 ">
            <p class="mb-0 review-text">Difficoltà</p>
            <% review.difficulty.times do %>
              <i class="fas fa-star"></i>
            <% end %>
          </div>

        </div>

      </div>
      <h5 class="mt-3"><%= review.title%></h5>
      <p class="review-text">
        <%= review.text%></p>
        <p class="review-date mb-1">Creata il:<%= review.created_at.strftime("%d/%m/%Y") %></p>

    </div>

  </div>
</div>
