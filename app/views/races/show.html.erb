<div class="container">
	<%= render "race_top_info", race: @race, photos: @photos, markers: @markers  %>
		<div class="row">
			<div class="col s12">
				<div class="card">
					<div class="card-content grey-text text-darken-4">
						<div class = "row">
			         <div class = "col s12">
								 <ul id="tabs-swipe" class="tabs">
							     <li class="tab col s6"><a class="active" href="#review-swipe">Recensioni</a></li>
							     <li class="tab col s6"><a href="#forum-swipe">Forum</a></li>
							   </ul>
							   <div id="review-swipe" class="col s12">
									 <% @reviews.each do |review| %>
										 <%= render "reviews/review_box", review: review %>
									 <% end %>
								 </div>
							   <div id="forum-swipe" class="col s12">
									 <%= render "questions/new_question_form", questions: @questions, race: @race %>
									 <ul class="collapsible">
									 <% @questions.each do |question| %>
										 <%= render "questions/question_box", question: question, race: @race %>
									 <% end %>
								  </ul>
								 </div>
			         </div>
			      </div>
					</div>

				</div>
			</div>
		</div>

		<%= render "races/photo_form_modal", race: @race %>
		<%= render "reviews/review_form_modal", race: @race %>
