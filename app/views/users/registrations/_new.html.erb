<%= form_for(resource, html: {:id => "user_signup"}, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, class:"form-control mb-2", autofocus: true, autocomplete: "email" , id: "email_signup"%>
  </div>

  <div class="field">
    <%= f.label :username %><br />
    <%= f.email_field :username, class:"form-control mb-2", id: "username_signup" %>
  </div>


  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, class:"form-control mb-2", autocomplete: "new-password", id: "password_signup"%>
  </div>

  <div class="field">
  <label for=""> Conferma password</label><br />
    <%= f.password_field :password_confirmation, class:"form-control mb-2", autocomplete: "new-password" %>
  </div>

  <div class="actions d-flex justify-content-around">
    <div class="">
      <%= f.submit "Sign up", class:"btn medium-btn my-3"%>
    </div>
  </div>
<% end %>

